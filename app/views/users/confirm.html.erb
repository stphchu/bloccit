<h2>Sign Up Confirmation</h2>
<h4>Are you sure these values are correct?</h4>

<div class="row">
  <div class="col-md-4">
	<h5><b>Name:</b> <%= @user.name %></h5>
	<h5><b>Email:</b> <%= @user.email %></h5>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-1">
       <%= button_to "Yes", { controller: "users", action: "create", params: { user: user_params } }, class: 'btn btn-success' %>
    </div>
    <div class="col-md-1">
       <%= button_to "No", { controller: "users", action: "new" }, method: :get, class: 'btn btn-failure' %>
    </div>
  </div>
</div>
